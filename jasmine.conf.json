{
  "spec_dir": "src",
  "spec_files": [
    "**/*[sS]pec.?(m)js",
    "**/*[sS]pec.?(m)ts"
  ],
  "helpers": [
    "helpers/**/*.?(m)js",
    "helpers/**/*.?(m)ts"
  ],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": true
  },
  "reporter": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "displayStacktrace": "all"
      }
    }
  ]
}
